<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tcdata.andrewrichardson.chef_ev_app.OrderActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Select A Protein"
        android:textAppearance="?android:attr/textAppearanceLarge" />


        <Spinner
            android:id="@+id/proteinSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/textViewOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Select An Option"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/orderViewFlavorButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Flavor" />

                <Button
                    android:id="@+id/orderViewSeasoningButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Seasoning" />

                <Button
                    android:id="@+id/orderViewNeitherButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Neither" />
            </TableRow>

        </TableLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Flavor"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:visibility="gone"
            android:id="@+id/flavorSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewSeasoning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Seasoning"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:visibility="gone"
            android:id="@+id/seasoningSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/textViewBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Base"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <Button
                    android:id="@+id/orderViewButtonGrains"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grains" />

                <Button
                    android:id="@+id/orderViewButtonVeggies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Veggies" />

                <Button
                    android:id="@+id/orderViewButtonBaseNeither"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Neither" />
            </TableRow>

        </TableLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewGrains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Grain"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:visibility="gone"
            android:id="@+id/grainsSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewVeggies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Veggie"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:visibility="gone"
            android:id="@+id/veggiesSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textViewBaseFlavor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Base Flavor"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:visibility="gone"
            android:id="@+id/baseFlavorSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <TextView
            android:id="@+id/textViewSide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Select A Side"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/sideSpinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <Button
            android:id="@+id/addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Add To Cart" />




    </LinearLayout>





</android.support.constraint.ConstraintLayout>



</ScrollView>

